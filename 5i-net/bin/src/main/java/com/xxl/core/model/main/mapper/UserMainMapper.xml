<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="UserMainMapper">
	
	<resultMap id="UserMain" type="com.xxl.core.model.main.UserMain" >
	    <id column="user_id" property="userId" jdbcType="INTEGER" />
	    <result column="user_name" property="userName" jdbcType="VARCHAR" />
	    <result column="password" property="password" jdbcType="VARCHAR" />
	    <result column="real_name" property="realName" jdbcType="VARCHAR" />
	</resultMap>

	<sql id="Base_Column_List">
		t.user_id,
		t.user_name,
		t.`password`,
		t.real_name
	</sql>
	
	<select id="getByPwd" parameterType="java.util.HashMap" resultMap="UserMain">
		SELECT	<include refid="Base_Column_List" />
		FROM user_main AS t
		WHERE t.user_name = #{userName} and t.`password` = #{password}
	</select>
	
</mapper>